{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "OpenGL: Compilar com FreeGLUT",
      "command": "C:/mingw64/bin/g++.exe",
      "args": [
        "-g",
        "-std=c++17",
        "-I${workspaceFolder}/external/include",
        "-L${workspaceFolder}/external/lib",
        "${workspaceFolder}/src/*.cpp", 
        "-lfreeglut",
        "-lopengl32",
        "-lglu32",
        "-o",
        "${workspaceFolder}/build/main.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Compilador configurado para MinGW64 com FreeGLUT (UFOP)"
    }
  ]
}